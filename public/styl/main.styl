html, body
  height 100%
  min-height 100%
body
  margin 0
  padding 0
.clearfix:after
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;

.clearfix
  display: inline-table
.hidden
  display: none!important
#wrapper
  position relative
  overflow visible
  max-width 100%
  max-height 100%
  #searchButton
    position fixed
    right 25px
    top 25px
  #brushButton
    position fixed
    right 25px
    top 100px
  #navigationController
    width 400px;
    position fixed;
    top 25px;
    left 50%;
    margin-left -210px
    padding 5px
    background-color white
    overflow hidden
    .viewController
      width 100%
      position relative
      top 0
    .next
      right -100%
    .slideOut
      -webkit-transition: transform 0.2s ease
      -webkit-transform: translate3d(100%,0,0)
    .slideIn
      -webkit-transition: transform 0.2s ease
      -webkit-transform: translate3d(-100%,0,0)
    #searchResultsWrapper
      max-height 400px
      overflow auto
      #searchingIndicator
        text-align center
        margin 10px auto
      #searchResults
        text-align center
        .searchResultsRow
          width 390px
          margin-bottom 10px
          display table
          .searchResultsCell
            display table-cell
            vertical-align middle
            border 1px solid white
            width 130px
            height 130px
            padding 0 5px
            img
              max-width 100%
              max-height 100%
          .selected
            border 1px solid #ef5350!important
    #imageDetailWrapper
      position absolute
      height 400px
      #imageDetailContent
        padding 10px
        #imageDetailThumbnail
          width 100%
          height 200px
          text-align center
          img
            max-width 100%
            max-height 100%
  #actionBar
    padding 15px 0
  .sidebar
    width 240px
    height 100%
    background-color #444
    position absolute
  #leftBar
    top 0
    left -240px
  #rightBar
    top 0
    right -240px
