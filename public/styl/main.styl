html, body
  height 100%
  min-height 100%
body
  margin 0
  padding 0
  background-color #ccc
.clearfix:after
  content: "."
  display: block
  height: 0
  clear: both
  visibility: hidden
.clearfix
  display: inline-table
.hidden
  display: none!important
.loadingPanel
  width 100%
  height 100%
  top 0
  left 0
  position absolute
  z-index 100
  text-align center
  .loadingPanelInner
    width 100%
    height 100%
    display table
    div
      display table-cell
      vertical-align middle
.scrollable
  overflow scroll
  -webkit-overflow-scrolling touch
.arrow_box_wrapper
  position absolute
  .arrow_box_bottom
    position relative
    background #4db6ac
    border-radius 6px
    min-width 200px
    height 44px
    ul
      width 100%
      height 100%
      margin 0
      display table
    li
      cursor pointer
      padding 5px
      display table-cell
      border-right 1px solid #fff
      text-align center
      vertical-align middle
      color white
      &:last-child
        border-right none
  .arrow_box_bottom:after
    top 100%
    left 50%
    border solid transparent
    content " "
    height 0
    width 0
    position absolute
    pointer-events none
    border-color rgba(0, 0, 0, 0)
    border-top-color #4db6ac
    border-width 10px
    margin-left -10px
#wrapper
  position relative
  overflow visible
  max-width 100%
  max-height 100%
  #modal
    img
      max-width 100%
  #searchButton
    position fixed
    right 25px
    top 25px
  .panel
    position fixed
    background-color white
    width 240px
  #brushButton
    position fixed
    right 25px
    top 100px
  #brushWrapper
     right 100px
     top 100px
     #brushView
      padding 10px
  #editButton
    position fixed
    right 25px
    top 175px
  #imageEditorButton
    position fixed
    right 25px
    top 250px
  #imageEditorView
    right 100px
    top 250px
    padding 10px
    #lineExtractInputWrapper
      padding-left 15px
  #debugButton
    position fixed
    right 25px
    bottom 25px
  #searchView
    width 400px
    position fixed
    top 25px
    left 50%
    margin-left -210px
    padding 5px
    background-color white
    overflow hidden
    #searchResultsWrapper
      max-height 400px
      #searchingIndicator
        text-align center
        margin 10px auto
      #searchResults
        text-align center
        .searchResultsRow
          width 390px
          margin-bottom 10px
          display table
          .searchResultsCell
            display table-cell
            vertical-align middle
            border 1px solid white
            width 130px
            height 130px
            padding 0 5px
            img
              max-width 100%
              max-height 100%
          .selected
            border 1px solid #ef5350!important
    #imageDetailWrapper
      position absolute
      height 400px
      #imageDetailContent
        padding 10px
        #imageDetailThumbnail
          width 100%
          height 200px
          text-align center
          img
            max-width 100%
            max-height 100%
  #canvasWrapper
    background-color white
    #mainCanvas
      cursor url("data:image/gif;base64,R0lGODlhAQABAIAAAP///////yH5BAEKAAEALAAAAAABAAEAAAICTAEAOw=="), pointer
      &[data-editing="true"]
        cursor pointer
  #actionBar
    padding 15px 0
  .sidebar
    width 240px
    height 100%
    background-color #444
    position absolute
  #leftBar
    top 0
    left -240px
  #rightBar
    top 0
    right -240px
