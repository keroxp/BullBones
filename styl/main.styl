html, body
  height 100%
  min-height 100%
body
  margin 0
  padding 0
.clearfix:after
  content: ".";
  display: block;
  height: 0;
  clear: both;
  visibility: hidden;

.clearfix
  display: inline-table
.hidden
  display: none!important
#wrapper
  position relative
  overflow visible
  max-width 100%
  max-height 100%
  #searchButton
    position fixed
    right 25px
    top 25px
  #brushButton
    position fixed
    right 25px
    top 100px
  #inputWrapper
    width 400px;
    position fixed;
    top 25px;
    left 50%;
    margin-left -210px
    padding 5px
    #searchResultsWrapper
      max-height 400px
      overflow auto
      #searchingIndicator
        text-align center
        margin 10px auto
      #searchResults
        text-align center
        .searchResultsRow
          width 100%
          margin-bottom 10px
          display table
          .searchResultsCell
            display table-cell
            vertical-align middle
            width 130px
            height 130px
            padding-left 10px
            img
              max-width 100%
              max-height 100%
  #actionBar
    padding 15px 0
  .sidebar
    width 240px
    height 100%
    background-color #444
    position absolute
  #leftBar
    top 0
    left -240px
  #rightBar
    top 0
    right -240px
